<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="GraafikPiip.Popups.AddShiftPopup"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <VerticalStackLayout Padding="16" Spacing="12" BackgroundColor="#101010">
        <Label x:Name="LblDate" TextColor="White" FontAttributes="Bold" FontSize="18"/>

        <Picker x:Name="EmployeePicker" Title="Сотрудник" />

        <Grid ColumnDefinitions="*,*">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Начало" TextColor="#bbb"/>
                <TimePicker x:Name="StartPicker" Time="09:00"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Конец" TextColor="#bbb"/>
                <TimePicker x:Name="EndPicker" Time="18:00"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Доп. имя для «Другой…» -->
        <VerticalStackLayout x:Name="ManualNameBlock" IsVisible="False">
            <Label Text="Имя" TextColor="#bbb"/>
            <Entry x:Name="NameEntry" Placeholder="Введите имя"/>
        </VerticalStackLayout>

        <Picker x:Name="ColorPicker" Title="Цвет"
                ItemsSource="{x:Static sys:String.Empty}">
            <Picker.Items>
                <x:String>Розовый</x:String>
                <x:String>Голубой</x:String>
                <x:String>Зелёный</x:String>
                <x:String>Жёлтый</x:String>
                <x:String>Фиолетовый</x:String>
            </Picker.Items>
        </Picker>

        <Grid ColumnDefinitions="*,*">
            <Button Text="Отмена" Clicked="Cancel_Clicked" Grid.Column="0"/>
            <Button Text="Сохранить" Clicked="Save_Clicked" Grid.Column="1"
                    BackgroundColor="#FF3DA1" TextColor="White"/>
        </Grid>
    </VerticalStackLayout>
</toolkit:Popup>
